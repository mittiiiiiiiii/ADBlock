{
    "name": "adBlock",
    "version": "0.1.3",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+F",
                "mac": "MacCtrl+Shift+F"
            }
        }
    },
    "permissions": ["scripting", "tabs"],
    "host_permissions": ["http://*/*", "https://*/"],
    "content_scripts": [
        {
            "js": ["adBlock.js"],
            "matches": ["<all_urls>"]
        }
    ]
}
