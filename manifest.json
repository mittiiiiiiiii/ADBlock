{
    "name": "adBlock",
    "version": "0.4.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+F",
                "mac": "MacCtrl+Shift+F"
            }
        }
    },
    "permissions": ["scripting", "tabs","activeTab"],
    "host_permissions": ["http://*/*", "https://*/"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "run_at":"document_start",
            "js": ["adBlock.js"]
            
            
        }
    ]
}